---
import PostPreview from './PostPreview.astro';
const { posts } = Astro.props;
---

<section class="my-12">
    <h2 class="text-3xl font-semibold">Latest Blog Posts</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {posts.map(post => (
      <PostPreview key={post.slug} post={post} />
    ))}
  </div>
</section>
